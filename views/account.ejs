<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meu Perfil</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #ffffff; /* Fundo branco */
            font-family: Arial, sans-serif;
            color: #333;
        }

        .container {
            margin-top: 40px;
        }

        .profile-card {
            background: #fff;
            border: 1px solid #ddd; /* Borda leve */
            border-radius: 8px;
            padding: 20px;
            max-width: 600px; /* Card menor */
            margin: 0 auto;
        }

        .nav-tabs {
            border-bottom: none;
        }

        .nav-link {
            border: none;
            color: #333;
            font-weight: bold;
        }

        .nav-link.active {
            color: #0d6efd;
            border-bottom: 2px solid #0d6efd;
        }

        .form-control {
            border: 1px solid #ddd;
            border-radius: 4px;
        }

        .btn-primary {
            background-color: #0d6efd;
            border: none;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        .table {
            margin-top: 20px;
            font-size: 14px;
        }

        .table th, .table td {
            vertical-align: middle;
        }

        .table th {
            font-weight: bold;
        }

        .btn-back {
            display: inline-flex;
            align-items: center;
            gap: 5px;
            text-decoration: none;
            font-size: 14px;
            color: #0d6efd;
        }

        .btn-back:hover {
            text-decoration: underline;
        }
    </style>
</head>

<header>
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">KORYO</a>
           
        </div>
    </nav>
</header>

<body>

<div class="container">
    <!-- Botão de Voltar -->
    <div class="mb-4">
        <a href="/welcome" class="btn-back">
            <i class="bi bi-arrow-left"></i> Voltar para Início
        </a>
    </div>

    <!-- Título -->
    <h3 class="mb-4 text-center">Meu Perfil</h3>

    <!-- Card do Perfil -->
    <div class="profile-card">
        <ul class="nav nav-tabs">
            <li class="nav-item">
                <button class="nav-link active" id="user-data-tab" data-bs-toggle="tab" data-bs-target="#user-data" type="button">
                    Dados do Usuário
                </button>
            </li>
            <li class="nav-item">
                <button class="nav-link" id="history-tab" data-bs-toggle="tab" data-bs-target="#history" type="button">
                    Histórico de Vídeos
                </button>
            </li>
        </ul>

        <div class="tab-content mt-4">
            <!-- Dados do Usuário -->
            <div class="tab-pane fade show active" id="user-data">
                <form action="/account" method="POST">
                    <div class="mb-3">
                        <label for="username" class="form-label">Nome de Usuário</label>
                        <input type="text" class="form-control" id="username" name="username" value="<%= user.username %>" required>
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">Email</label>
                        <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>" required>
                    </div>

                    <div class="mb-3">
                        <label for="name" class="form-label">Nome</label>
                        <input type="text" class="form-control" id="name" name="name" value="<%= user.name %>" required>
                    </div>

                    <div class="mb-3">
                        <label for="surname" class="form-label">Sobrenome</label>
                        <input type="text" class="form-control" id="surname" name="surname" value="<%= user.surname %>" required>
                    </div>

                    <div class="mb-3">
                        <label for="level" class="form-label">Graduação</label>
                        <select class="form-select" id="level" name="level" required>
                            <option value="branca" <%= user.level === 'branca' ? 'selected' : '' %>>Branca</option>
                            <option value="amarela" <%= user.level === 'amarela' ? 'selected' : '' %>>Amarela</option>
                            <option value="verde" <%= user.level === 'verde' ? 'selected' : '' %>>Verde</option>
                            <option value="azul" <%= user.level === 'azul' ? 'selected' : '' %>>Azul</option>
                            <option value="vermelha" <%= user.level === 'vermelha' ? 'selected' : '' %>>Vermelha</option>
                        </select>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Salvar Alterações</button>
                </form>
            </div>

            <!-- Histórico de Vídeos -->
            <div class="tab-pane fade" id="history">
                <table class="table table-borderless">
                    <thead>
                    <tr>
                        <th>Título</th>
                        <th>Descrição</th>
                        <th>Data</th>
                    </tr>
                    </thead>
                    <tbody>
                    <% watchedVideos.forEach(video => { %>
                        <tr>
                            <td><%= video.title %></td>
                            <td><%= video.description %></td>
                            <td><%= new Date(video.watched_at).toLocaleDateString() %></td>
                        </tr>
                    <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<%- include('partials/footer') %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
