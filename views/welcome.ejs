<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bem-vindo</title>
    <!-- Bootstrap CSS e Ícones -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .search-bar {
            border-radius: 25px;
            padding-left: 35px;
            height: 38px;
            width: 250px;
            border: 1px solid #ced4da;
            background-color: #f8f9fa;
            background-image: url("https://cdn.jsdelivr.net/npm/bootstrap-icons/icons/search.svg");
            background-repeat: no-repeat;
            background-position: 10px center;
            background-size: 18px;
            font-size: 16px;
            color: #6c757d;
            font-weight: 400;
        }
        .progress-bar-custom {
            background-color: #0F006C;
        }
    </style>
</head>
<body>

    <!-- Navbar com Campo de Busca -->
    <header>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">KORYO</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav ms-auto d-flex align-items-center">
                        <!-- Campo de Busca -->
                        <form class="d-flex me-3" action="/search" method="GET">
                            <input type="search" class="form-control search-bar" name="query" placeholder="O que você quer aprender?" aria-label="Buscar">
                        </form>
                        <!-- Ícone de Conta -->
                        <a href="/account" class="nav-link">
                            <i class="bi bi-person fs-3"></i>
                        </a>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <!-- Saudação e Introdução -->
    <div class="container mt-5">
        <div class="text-center mb-4">
            <h5 class="fw-bold">Bem-vindo, <%= username %>!</h5>
            <p class="text-muted">Estamos felizes em tê-lo aqui.</p>
        </div>
    </div>

    <!-- Barra de Progresso -->
    <div class="container">
        <h6>Progresso de Aprendizado</h6>
        <div class="progress">
            <div class="progress-bar progress-bar-custom" role="progressbar" style="width: <%= progressPercentage %>%;" aria-valuenow="<%= progressPercentage %>" aria-valuemin="0" aria-valuemax="100">
                <%= progressPercentage %>%
            </div>
        </div>
    </div>

    <!-- Conteúdos de Graduação -->
    <div class="container mt-5">
        <h2 class="text-center mb-4">O que vamos aprender hoje?</h2>
        
        <!-- Exibição dos vídeos de acordo com a graduação do usuário -->
        <div class="row">
            <% videos.forEach(video => { %>
                <% if (video.level === userLevel) { %> <!-- Exibe somente vídeos da graduação do usuário -->
                    <div class="col-md-4 mb-4">
                        <div class="card shadow-sm">
                            <iframe class="card-img-top" width="100%" height="200" src="https://www.youtube.com/embed/<%= video.youtube_url.split('=')[1] %>" frameborder="0" allowfullscreen></iframe>
                            <div class="card-body">
                                <h5 class="card-title"><%= video.title %></h5>
                                <p class="card-text text-muted">Nível: <%= video.level %></p>
                                <p class="card-text"><%= video.description %></p>
                                <button class="btn btn-primary w-100" onclick="updateProgress(<%= video.id %>)">Marcar como Assistido</button>
                            </div>
                        </div>
                    </div>
                <% } %>
            <% }); %>
        </div>
    </div>

    <!-- Script para atualizar a barra de progresso -->
    <script>
        function updateProgress(videoId) {
            fetch(`/mark-watched/${videoId}`, {
                method: 'POST',
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    // Atualiza a barra de progresso na página
                    document.querySelector('.progress-bar').style.width = `${data.newProgress}%`;
                    document.querySelector('.progress-bar').innerText = `${data.newProgress}%`;
                }
            })
            .catch(error => console.error('Erro ao atualizar progresso:', error));
        }
    </script>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
</body>
</html>
