<!-- welcome.ejs -->
<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Inclua isso na sua tag <head> -->
    <!-- Bootstrap Icons CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.4/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/style.css">
    <title>Bem-vindo</title>
</head>
<header>
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">KORYO</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="navbar-nav ml-auto">
            <a href="/account" class="nav-link">
                <i class="bi bi-person fs-3"></i>
            </a>
        </div>
        </div>
      </nav>
</header>
<body>
    <div class="container mt-5">
        <h5>Bem-vindo, <%= username %>!</h5>
        <p>Estamos felizes em tê-lo aqui.</p>
        <a href="/logout">Sair</a>
    </div>
    <div class="videos-container">
        <% videos.forEach(video => { %>
            <div class="video-card">
                <h2><%= video.title %></h2>
                <p>Nível: <%= video.level %></p>
                <p><%= video.description %></p>
                <p>Data de publicação: <%= new Date(video.created_at).toLocaleDateString() %></p>
                <iframe width="320" height="240" src="<%= video.youtube_url %>" frameborder="0" allowfullscreen></iframe>
            </div>
        <% }) %>
    </div>
</body>
</html>
